
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block body %}
    
    {% if usuario is defined %}
    <h5>EDITAR USUARIO</h5>
    {% else %}
    <h5>NUEVO USUARIO</h5>
    {% endif %}
    
    <form class="formu" 
    {% if usuario is defined %}
    action="{{ path ('modifico_usuario' , { 'id' : usuario.id } )}}"
    {% else %}
     action="{{('/crear_usuario')}}"
    {% endif %}>
        <label class=" form-label"  for="usuario" >Usuario: * </label>
        <input class=" form-control" type="text" name="usuario"
            {% if usuario is defined %}
                value="{{ usuario.usuario }}"
            {% endif %}
         required >
        <label class=" form-label" for="nombre">Nombre: * </label>
        <input class=" form-control" type="text" name="nombre" 
            {% if usuario is defined %}
                value="{{ usuario.nombre }}"
            {% endif %}
        required>
        <label class=" form-label" for="apellidos">Apellidos: *</label>
        <input class=" form-control" type="text" name="apellidos" 
            {% if usuario is defined %}
                value="{{ usuario.apellidos }}"
            {% endif %}
        required>
        <label class=" form-label" for="email"> Email: *</label>
        <input class=" form-control" type="text" name="email" 
            {% if usuario is defined %}
                value="{{ usuario.email }}"
            {% endif %}
        required>
        <label class=" form-label" for="pass"> Contraseña: *</label>
        <input class=" form-control" type="password" name="pass" 
        required>
        
        <label class=" form-label" for="rol"> Rol del usuario: *</label>
        <select class=" form-control"  name="rol">
        {% if usuario is defined %}
                {{ usuario.email }}
            {% endif %}
            <option value="cliente">Cliente</option>
            <option value="admin">Administrador</option>
        </select>

        <input class="mt-3 mb-3 w-100" type="submit" value="Crear usuario">
    </form>

    
        <a href="{{('/usuarios')}}"><button>Atrás</button></a>
{% endblock %}

